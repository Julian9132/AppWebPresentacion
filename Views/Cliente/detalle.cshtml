@model AppBootstrap.Models.Cliente
@{
    ViewData["Title"] = "Detalle";
}


<h2 class="text-center m-2">  Clientes </h2>

    <div class="col-12 bg-warning d-flex flex-column align-items-center flex-md-row flex-lg-row justify-content-md-center justify-content-lg-center align-items-md-start  align-items-lg-start">

        <div class="col-12 col-md-6 col-lg-2 bg-white p-2  m-4 d-flex align-items-center justify-content-start ">

            <nav>
                <ul class="nav nav-pills nav-fill">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-action="Index">Ir a Listar </a>
                        @Html.ActionLink("Editar", "Editar", new { id = @Model.Codigo })
                        @Html.ActionLink("Borrar", "Borrar", new { id = @Model.Codigo })
                    </li>

                </ul>
            </nav>


        </div>


        <div class="col-12 col-md-6 col-lg-8 bg-white p-3 border rounded m-4">

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Codigo</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Correo</th>
                    
                    </tr>
                </thead>
                <tbody>

                    <tr>
                        <th scope="row">@Model.Codigo</th>
                        <td>@Model.Nombre</td>
                        <td>@Model.Correo</td>

                    </tr>


                </tbody>
            </table>



        </div>
 </div>